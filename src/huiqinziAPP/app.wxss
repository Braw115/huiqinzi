.goodsDeatil {
  font-weight: 500;
}

view {
  box-sizing: border-box;
}

.page {
  width: 100%;
  font-size: 10pt;
  font-family: "PingFang-SC-Regular";
}

/* 灰色分割栏 */

.graySeparate {
  height: 30rpx;
  background-color: #f4f4f4;
  width: calc(100% + 40rpx);
  /* width: 100% ; */
  position: relative;
  left: -20rpx;
}

/* 轮播图 */

swiper {
  height: 44vw;
}

.slide-image {
  width: 100%;
  /* height: 100%; */
}

.bannerItem {
  position: relative;
  height: 100%;
}

/* 类型横向滚动 */

.types {
  white-space: nowrap;
}

.type {
  display: inline-block;
  width: 33.3%;
  height: 65rpx;
  line-height: 60rpx;
  /* font-weight: 800; */
  text-align: center;
  color: #999;
}

.types .active {
  color: #ff4747;
  position: relative;
  font-weight: 700;
}

.types .activeTypeBorder {
  display: inline-block;
  width: 100%;
  height: 3pt;
  border-radius: 10rpx;
  background-color: #ff4747;
  position: absolute;
  left: 0;
  bottom: 0;
}

/* 商品列表样式 */

.emptyList {
  color: #999;
  font-size: 12pt;
  text-align: center;
  padding: 10rpx;
}

.goodsList, .goodsListSP {
  padding-top: 20rpx;
}

.goodsListItem {
  height: 82pt;
  padding: 15rpx 0;
  border-bottom: 1px solid #dcdcdc;
}

.goodsListItem image {
  width: 30%;
  height: 100%;
}

.goodsListItem .title {
  color: #333;
  font-size: 11pt;
  overflow: hidden;
  text-overflow: "......";
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.goodsListItem .tags {
  color: #999;
  padding: 10rpx 0;
}

.goodsListItem .infos {
  display: inline-block;
  width: 70%;
  height: 100%;
  vertical-align: top;
  padding-left: 15rpx;
  position: relative;
}

.goodsListItem .infos .priceAndTime {
  position: absolute;
  bottom: 0;
  left: 15rpx;
  width: calc(100% - 15rpx);
}

.goodsListItem .infos .priceAndTime .price {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.goodsListItem .infos .price .rushPrice .realPrice {
  font-size: 14pt;
  font-weight: 800;
}

.goodsListItem .infos .price .rushPrice .priceC {
  color: #ff4747;
  font-size: 11pt;
  font-weight: 700;
}

.goodsListItem .infos .price .rushPrice {
  color: #ff4747;
  font-size: 0;
  flex: 1;
}

.goodsListItem .infos .price .originalPrice {
  padding: 0 10rpx;
  text-decoration: line-through;
  color: #999;
  font-size: 10pt;
}

.goodsListItem .infos .price .time {
  flex: 7;
}

.goodsListItem .infos  .leftTime, .goodsTitle .goodsLeftTime .leftTime {
  display: inline-block;
  min-width: 12pt;
  line-height: 12pt;
  color: #fff;
  background-color: #ff4747;
  border-radius: 7pt;
  text-align: center;
  font-size: 7pt;
}

.goodsListItem .infos .price .gotoBuyBtn {
  color: #fff;
  background-color: #ff4747;
  border-radius: 12pt;
  text-align: center;
  font-size: 11pt;
  font-weight: 800;
  /* flex: 1; *//* float: right; *//* margin-left: 20rpx; */
  width: 50pt;
  line-height: 20pt;
}

.goodsListItem .infos .surplusTime {
  font-size: 8pt;
  text-align: right;
  padding: 12rpx 0;
  color: #999;
}

.goodsListItem .infos .price .selled {
  text-align: right;
  color: #999;
  font-size: 10pt;
  font-weight: 500;
}

/* 地址选择 */

.addresses {
  padding: 10rpx 20rpx;
  position: absolute;
  top: 90rpx;
  left: 0;
  display: none;
  background-color: #fff;
  z-index: 99;
}

.showAddrs {
  display: block;
}

.addresses view {
  display: inline-block;
  width: 24%;
  line-height: 70rpx;
  text-align: center;
  border: 2rpx solid #dcdcdc;
  border-radius: 10rpx;
  color: #999;
}

.addresses view.center {
  margin: 10rpx 13%;
}

.addresses view.active {
  background-color: #ff4747;
  color: #fff;
}

/* 商品详情标题 */

.goodsTitle .sell {
  padding: 20rpx 0;
  flex-direction: row;
  display: flex;
  width: 100%;
  align-items: center;
}

.goodsTitle .goodsLeftTime {
  flex: 1;
  text-align: right;
  font-size: 8pt;
}

.goodsTitle .priceC {
  font-size: 11pt;
  color: #ff4747;
  font-weight: 700;
}

.goodsTitle .price {
  font-size: 14pt;
  color: #ff4747;
  font-weight: 800;
}

.goodsTitle .specialprice {
  color: #999;
  font-size: 10pt;
  text-decoration: line-through;
  padding: 0 15rpx;
}

.goodsTitle .selled {
  color: #999;
  font-size: 10pt;
}

/* 底部按钮 */

.bottomBtns {
  width: 100%;
  display: flex;
  position: fixed;
  align-items: center;
  left: 0;
  top: calc(100% - 40pt);
  border: 1px solid #d7d7d7;
}

.bottomBtns>view {
  height: 50pt;
  flex: 1;
  text-align: center;
  padding: 2pt;
  line-height: 38pt;
  background-color: #fff;
}

.bottomBtns .serviceImg {
  width: 37px;
  height: 37px;
  vertical-align: middle;
}

.bottomBtns>view.Recommend {
  background-color: #ff4747;
  color: #fff;
}

/* 商品详情 */

.goodsDeatil .title {
  font-weight: 900;
  padding: 5pt 0;
}

/* 横向流式布局 */

.flexBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flexBox>view {
  flex: 1;
}

/* 客服电话 */

.servicePhone {
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  height: calc(100% - 40pt);
  width: 100%;
  color: #fff;
  padding-top: 130%;
  padding-left: 40rpx;
  z-index: 99;
}


.wxParse-img {
  margin: 10rpx 0;
}
