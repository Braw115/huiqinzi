/* pages/goodsBuy/paradise/paradise.wxss */
@import "../../../lib/style/font.wxss";

page {
  margin-bottom: 40pt;
  background-color: #f4f4f4;
  padding-top: 10rpx;
  font-size: 10pt;
}

.hasPadding {
  padding: 20rpx;
  background-color: #fff;
}

.header .title {
  flex: 2;
  padding-left: 20rpx;
  font-weight: 900;
}

.header .img image {
  width: 100%;
  height: 50pt;
}

.norm {
  padding: 20rpx 0;
  color: #999999;
}

.opNum .buyNum {
  display: inline-block;
  width: 40pt;
  text-align: center;
  vertical-align: middle;
}

.opNum>label {
  display: inline-block;
  width: 50%;
  line-height: 20pt;
}

.opNum .num {
  text-align: right;
}

.opNum .num text {
  vertical-align: middle;
  height: 1.4rem;
  width: 1.4rem;
}

.opNum>label>label {
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.opNum .num .font {
  display: inline-block;
  padding: 0 10rpx;
}

.opNum .num .font:nth-of-type(1) {
  border-right: 1px solid #ccc;
}

.opNum .num .font:nth-of-type(2) {
  border-left: 1px solid #ccc;
  color: #FF4747;
}

.tag{
  font-weight: 800;
}
.orderInfo .content{
  flex: 3;
  color: #999999;
}
.orderInfos .orderInfo{
  line-height: 30pt;
}

.bottomBtns .gotoPay{
  background-color: #57C944;
  color: #fff;
}
.bottomBtns .totalCash{
  color: #E60012;
  text-align: center;
}