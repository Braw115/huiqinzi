/* pages/mineDetail/address/address.wxss */
@import "../../../lib/style/font.wxss";

page {
  background-color: #f4f4f4;
  padding-top: 20rpx;
  font-size: 10pt;
}

.box {
  padding: 0 20rpx;
  background-color: #fff;
  line-height: 30pt;
  color: #999;
}

.flexBox .content {
  flex: 2;
  padding-left: 20rpx;
  color: #333;
}

.box>view:not(:first-of-type) {
  border-top: 1px solid #dcdcdc;
}

.flexBox .tagAddr {
  flex: 9;
}

.addrGoto image {
  width: 100%;
  height: 12pt;
  vertical-align: middle;
}

.isDefault .active {
  color: #df494a;
}

.isDefault .active:before {
  content: "\e604";
}

#addrChose {
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 99;
  text-align:center;
  color: #333;
}

#addrChose .mask {
  height: calc(100% - 240px);
  background-color: rgba(0, 0, 0, 0.5);
}
#addrChose .showAddrBtns{
 background-color: rgba(0, 0, 0, 0.5);
 justify-content: space-between;
 display: flex;
 flex-direction: row;
}
#addrChose .showAddrBtns view{
  width: 40pt;
  text-align: center;
  color: green;
  padding: 5pt 0;
}

#addrChose .flexBox {
  border-bottom: 1px solid #dcdcdc;
  padding: 0 20rpx;
}

#addrChose  .flexBox>view {
  line-height: 40px;
}
#addrChose picker-view{
  width: 100%; 
  height: 200px;
}
#addrChose picker-view-column view{
  line-height:40px;
}
.isDefault label{
  padding-left: 20rpx;
}