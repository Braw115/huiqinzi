/* pages/rushBuy/rushBuy.wxss */

.page {
  padding: 0 20rpx;
}

.rushService {
  display: block;
  height: 75pt;
  padding: 15rpx 0;
}

.rushService image {
  width: 40%;
  height: 100%;
}

.rushService .title {
  color: #333;
}

.rushService .tags {
  color: #999;
  padding: 10rpx 0;
}

.rushService .infos {
  display: inline-block;
  width: 60%;
  vertical-align: top;
  padding-left: 15rpx;
}

.rushService .infos .priceAndTime {
  display: flex;
}

.rushService .infos .priceAndTime .rushPrice {
  flex: 2;
  color: #e60012;
  font-size: 14pt;
  font-weight: 800;
  line-height: 75pt;
}

.rushService .infos .priceAndTime .originalPrice {
  flex: 3;
  line-height: 76pt;
  padding-left: 20rpx;
  text-decoration: line-through;
  color: #999;
  font-size: 10pt;
}

.rushService .infos .priceAndTime .time {
  flex: 5;
}

.rushService .infos .priceAndTime .gotoBuyBtn {
  color: #fff;
  background-color: #FF4747;
  border-radius: 10rpx;
  text-align: center;
  padding: 4pt 0;
  font-size: 12pt;
}

.rushService .infos .priceAndTime .surplusTime {
  font-size: 8pt;
  text-align: center;
  padding: 12rpx 0;
  color: #eb6100;
}
