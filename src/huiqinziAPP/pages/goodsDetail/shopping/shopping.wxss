/* pages/goodsDetail/shopping/shopping.wxss */
@import "../../../lib/style/font.wxss";
@import "../../../lib/wxParse/wxParse.wxss";

page {
  background-color: #f4f4f4;
  min-height: 100%;
  font-size: 10pt;
  margin-bottom: 40pt;
}

.scrollItem {
  height: 100%;
}

.goodsDetailImg {
  padding: 0 20%;
  background-color: #fff;
}

.goodsDetailImg image {
  width: 100%;
  height: 130pt;
}

.infos {
  padding: 20rpx;
  background-color: #fff;
}

.infos .title {
  font-weight: 900;
}

.infos .info {
  color: #666;
}

.infos>view {
  padding: 8rpx 0;
}

.infos .price {
  color: #dc4040;
}

.allNorms {
  min-height: 40pt;
}

.norms .norm {
  display: inline-block;
  padding: 10rpx;
  width: 50%;
  margin: 10rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin-right: 10%;
  background-color: #D9D9D9;
  color: #999999;
}

.norms .buyNum {
  padding: 0 30rpx;
}

.allNorms .active {
  background-color: #FF4747;
  color: #fff;
  border-color: #FF4747;
}

.bottom {
  display: flex;
  flex-direction: row;
}

.infos .EMC>view {
  color: #999;
  font-size: 9pt;
}

.bottom>view {
  flex: 1;
  text-align: left;
}

.bottom>view:last-child {
  text-align: right;
}

.bottom>view.monthSales {
  text-align: center;
}

.loadContent {
  text-align: center;
  padding-top: 50rpx;
  color: #666;
  min-height: 50pt;
}
