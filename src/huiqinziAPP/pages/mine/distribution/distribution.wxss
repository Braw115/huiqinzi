/* pages/mine/distribution.wxss */
@import "../../../lib/style/font-left.wxss";

page {
  background-color: #f4f4f4;
  margin-bottom: 50pt;
  font-size: 10pt;
}

.page {
  padding: 0 20rpx 20rpx;
}
.page>view{
  width: 100%
}

.title {
  padding: 15rpx 20rpx;
  color: #333;
}

.infos {
  padding: 20rpx;
  background-color: #fff;
  width: calc(100% - 40rpx);
  border-radius: 10rpx;
}

.infos .flexBox {
  padding: 15rpx 0;
}

.infos .content {
  /* font-weight: 800; */
}

.shopInfos image {
  width: 30pt;
  height: 30pt;
  border-radius: 50%;
  vertical-align: middle;
}

.shopInfos .content text {
  color: #dcdcdc;
  margin-left: 10pt;
}

.infos .content {
  text-align: right;
}

.infos .tag {
  color: #999;
}

.userInfos .content:not(.black) {
  color: #ff4747;
}

.userInfos .content.black {
  color: #333;
}

.order {
  color: #999;
  font-size: 9pt;
  margin-top: 20rpx;
}

.order .header {
  border-bottom: 1px solid #dcdcdc;
  width: calc(100% + 40rpx);
  margin-left: -20rpx;
  padding: 0 20rpx 20rpx 20rpx;
}

.order .goodsInfo .img {
  height: 50pt;
}

.order .goodsInfo image {
  width: 100%;
  height: 100%;
}

.order .goodsInfo .title {
  flex: 4;
  font-weight: 800;
  color: #000;
}

.order .orderInfo {
  padding: 5rpx 0;
}

.orderInfo .content {
  color: #333;
}

.orderInfo .money {
  color: #ff4747;
}

.getCash .title {
  width: calc(100% - 40rpx);
  padding: 25rpx 20rpx;
}

.getCash .tag {
  color: #333;
  font-weight: 800;
}

.getCash .content {
  flex: 2;
  text-align: left;
  color: #999;
}

.getCash .getCashHistory {
  text-align: right;
}

.getCash .getCashHistory .gotoWithdrawHistory {
  color: #62d1d0;
}

.getCash .canWithdraw {
  font-weight: 700;
}

.getCashSetting .discribe {
  align-items: top;
}

.getCashSetting .discribe>view {
  height: 60pt;
}

.getCashSetting textarea {
  width: 100%;
  height: 100%;
}
.getCashSetting .content{
  color: #333;
}

.getCashHistory>navigator {
  display: inline-block;
  color: #62d1d0;
  text-align: right;
}

.getCash .tips {
  align-items: top;
}

.getCash .tips>view {
  min-height: 60pt;
}

.getCash .tips .content {
  flex: 9;
}

.getCash .tips .content text {
  color: #fdb429;
}

.getCash .tips .tag {
  min-width: 30pt;
  color: #999;
}

#submitGetCash {
  background-color: #ff4747;
  color: #fff;
  text-align: center;
  font-size: 12pt;
}

.bottomBtns .tab view {
  line-height: 1pt;
  color: #999;
}

.bottomBtns .tab .tab_active {
  color: #ff4747;
}

.bottomBtns .tab {
  display: inline-block;
}

.bottomBtns .tab image {
  width: 20pt;
  height: 20pt;
  vertical-align: middle;
}

.bottomBtns {
  top: calc(100% - 50pt);
}

#imgTemp {
  position: fixed;
  left: 0;
  top: 100%;
  width: 50%;
  height: 300pt;
}

#attendCanvasId {
  position: fixed;
  left: 50%;
  top: 110%;
  width: 50%;
  height: 300pt;
}
