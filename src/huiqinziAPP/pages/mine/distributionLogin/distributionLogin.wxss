.title{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title text{
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;

}
.invite-num{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;

}
.invite-num button{
  width: 300rpx;
  height: 80rpx;
  border: 1rpx solid #FF0000;
  border-radius: 45rpx;
  background:#FFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #FF0000;
  font-weight: bold;

}
.invite-rule{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.invite-rule .rule{
  width: 80%;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  font-weight: bold;

}
.rule text{
font-size: 30rpx;
color: #FF0000

}
.invite-avatar{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.invite-avatar .avatar{
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background-color: #eee;
  display: flex;
  margin: 30rpx;
}
.avatar image{
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
}
.btn-distribution{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.btn-distribution .btn-a{
 width: 690rpx;
 height: 88rpx;
 background-color: #FF4747;
 color: #FFF;
}
.btn-distribution .btn{
 width: 690rpx;
 height: 88rpx;
 background-color: #ffa3a3;
 color: #FFF;
}
.btn-active{
  background-color: #ffa3a3
}
